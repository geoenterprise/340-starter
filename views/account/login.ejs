<% if (title) { %>
<h1><%= title %></h1>
<% } %> <% if (messages.error) { %>
<p class="error"><%= messages.error %></p>
<% } %> <% if (messages.success) { %>
<p class="success"><%= messages.success %></p>
<% } %>

<form action="/account/login" id="login-form" method="POST">
  <label for="account_email">Email:</label>
  <input type="email" id="account_email" name="account_email" required />

  <label for="account_password">Password:</label>
  <input
    type="password"
    id="account_password"
    name="account_password"
    required
  />
  <button type="submit">Login</button>

  <p>Don't have an account? <a href="/account/register">Sign-up</a></p>
</form>
