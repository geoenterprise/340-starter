<% if (title) { %>
<h1><%= title %></h1>
<% } %> <%- messages('notice') %> <%- messages('error') %>

<p class="notice">
  Confirm Deletion - This action is permanent and cannot be undone.
</p>

<form action="/inv/deleteInv" id="deleteInv" method="POST">
  <label for="inv_make">Make:</label>
  <input
    type="text"
    id="inv_make"
    name="inv_make"
    readonly
    value="<%= locals.inv_make || '' %>"
  />

  <label for="inv_model">Model:</label>
  <input
    type="text"
    id="inv_model"
    name="inv_model"
    readonly
    value="<%= locals.inv_model || '' %>"
  />

  <label for="inv_year">Year:</label>
  <input
    type="number"
    id="inv_year"
    name="inv_year"
    readonly
    value="<%= locals.inv_year || '' %>"
  />

  <label for="inv_price">Price:</label>
  <input
    type="number"
    id="inv_price"
    name="inv_price"
    readonly
    value="<%= locals.inv_price || '' %>"
  />

  <input type="hidden" name="inv_id" value="<%= locals.inv_id || '' %>" />

  <button type="submit">Delete Vehicle</button>
</form>
