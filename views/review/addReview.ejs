<% if (title) { %>
<h1><%= title %></h1>
<% } %> <%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<h2>Add Review</h2>
<form action="/review/addReview" id="addReview" method="POST">
  <label for="review_title">Title:</label>
  <input
    type="text"
    id="review_title"
    name="review_title"
    required
    value="<%= locals.review_title || '' %>"
  />

  <label for="review_text">Text:</label>
  <textarea
    id="review_text"
    name="review_text"
    required
    value="<%= locals.review_text || '' %>"
  ></textarea>

  <label for="review_rating">Rating:</label>
  <input
    type="number"
    id="review_rating"
    name="review_rating"
    min="1"
    max="5"
    required
    value="<%= locals.review_rating || '' %>"
  />

  <button type="submit">Add Review</button>
</form>
