<% if (title) { %>
<h1><%= title %></h1>
<% } %> <% if (errors) { %>
<ul class="notice">
  <% errors.forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<h2>Add Review</h2>
<form action="/review/addReview" id="addReview" method="POST">
  <label for="review_title">Title:</label>
  <input
    type="text"
    id="review_title"
    name="review_title"
    required
    value="<%= locals.review_title || '' %>"
  />

  <label for="review_text">Text:</label>
  <textarea
    id="review_text"
    name="review_text"
    required
    value="<%= locals.review_text || '' %>"
  ></textarea>

  <label for="review_rating">Rating:</label>
  <select id="review_rating" name="review_rating" required>
    <option value="5">5 - Excellent</option>
    <option value="4">4 - Good</option>
    <option value="3">3 - Average</option>
    <option value="2">2 - Poor</option>
    <option value="1">1 - Terrible</option>
  </select>

  <!-- Hidden field for inv_id -->
  <input type="hidden" name="inv_id" value="<%= inv_id %>" />

  <button type="submit">Add Review</button>
</form>
