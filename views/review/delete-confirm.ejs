<% if (title) { %>
<h1><%= title %></h1>
<% } %> <%- messages('notice') %> <%- messages('error') %>

<p class="notice">
  Confirm Deletion - This action is permanent and cannot be undone.
</p>

<form action="/review/deleteReview" id="deleteReview" method="POST">
  <label for="review_id">Review ID:</label>
  <input type="number" id="review_id" name="review_id" required />

  <% if (locals.review_id) { %>
  <p>Review ID: <%= locals.review_id %></p>
  <% } %>

  <button type="submit">Delete Review</button>
</form>
