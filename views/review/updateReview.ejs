<% if (title) { %>
<h1><%= title %></h1>
<% } %> <% if (messages.notice) { %>
<ul class="notice">
  <% messages.notice.forEach(function (msg) { %>
  <li><%= msg %></li>
  <% }) %>
</ul>
<% } %>
<form action="/review/updateReview" id="updateReview" method="POST">
  <input
    type="hidden"
    id="review_id"
    name="review_id"
    value="<%= review_id %>"
  />
  <input type="hidden" id="inv_id" name="inv_id" value="<%= inv_id %>" />

  <label for="review_title">Title:</label>
  <input
    type="text"
    id="review_title"
    name="review_title"
    required
    value="<%= review_title %>"
  />

  <label for="review_text">Text:</label>
  <textarea id="review_text" name="review_text" required>
    <%= review_text %>
  </textarea>

  <label for="review_rating">Rating:</label>
  <select id="review_rating" name="review_rating" required>
    <option value="5">5 - Excellent</option>
    <option value="4">4 - Good</option>
    <option value="3">3 - Average</option>
    <option value="2">2 - Poor</option>
    <option value="1">1 - Terrible</option>
    value="<%= review_rating %>" selected
  </select>

  <button type="submit">Update Review</button>
</form>
